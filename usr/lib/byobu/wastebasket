PKG="byobu"
color 2>/dev/null || color() { true; }

[ "$UTF8" = "1" ] && ICON="â™¸" || ICON="W"

dir=$HOME/.local/share/Trash/files

[ ! -d $dir ] && exit 0
count=$(ls $dir|wc -l)
[ "$count" -eq 0 ] && exit 0

if [ "$1" = "--detail" ]
then
  echo -n "${ICON}[$count]"
else
  echo -n $ICON
fi

exit 0
