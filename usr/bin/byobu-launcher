PKG="byobu"
DATA="$HOME/.$PKG"
[ -z "$BYOBU_PREFIX" ] && export BYOBU_PREFIX="/usr"
export BYOBU_PREFIX

if [ ! -e "$DATA/disable-autolaunch" ]; then
	case "$TERM" in
		*screen*)
			# Handle nesting
			printf "$(gettext 'To launch in a nested screen session, run: byobu')\n"
		;;
		dumb)
			# Dumb terminal, don't launch
			false
		;;
		*)
			exec $BYOBU_PREFIX/bin/byobu "$@"
		;;
	esac
fi
false
