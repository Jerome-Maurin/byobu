flag="/var/run/reboot-required"
case "$1" in
	--detail)
		ls -alF "$flag" 2>&1
	;;
	--short)
		[ -e "$flag" ] && printf "Yes" || printf "No"
	;;
	*)
		[ -e "$flag" ] && printf "\005{=b bW}(@)\005{-} " || exit 0
	;;
esac
