# Default is "off"
p="uptime"
grep -qs "^$p=1$" "$HOME/.screen-profiles/status" || exit 0

u=$(sed "s/\..*$//" /proc/uptime)
printf "\005{= b}"
if [ "$u" -gt 86400 ]; then
	printf "%dd" `echo "$u" | awk '{printf "%.1f", $1 / 86400 }'`
elif [ "$u" -gt 3600 ]; then
	printf "%dh" `echo "$u" | awk '{printf "%.1f", $1 / 3600 }'`
elif [ "$u" -gt 60 ]; then
	printf "%dm" `echo "$u" | awk '{printf "%.0f", $1 / 60 }'`
else
	printf "%ds" "$u"
fi
printf "\005{-} "
