DIR="/proc/acpi/thermal_zone"
if [ "$1" = "--detail" ]; then
	for i in `ls $DIR`; do
		echo "$i:"
		cat "$DIR/$i"/*
	done
	exit 0
fi

for i in `ls "$DIR/"*"/temperature"`; do
	t=$(sed "s/^[^0-9]\+//" "$i" | sed "s/\s.*$//")
	printf "\005{=b kY}%sC\005{-} " "$t"
	break
done
