PKG="byobu"

if [ "$1" = "--detail" ]; then
	df -h -P
	exit 0
fi

# Default to /, but let users override
[ -r "$HOME/.$PKG/disk" ] && MP=`cat "$HOME/.$PKG/disk"` || MP="/"
case $MP in
	/dev/*) MP=`grep "$MP" /proc/mounts | awk '{print $2}'` ;;
esac

df -h -P "$MP" | tail -n 1 | awk '{printf "\005{= MW}%sB,%s\005{-}", $2, $5}'
