PKG="byobu"

if [ "$1" = "--detail" ]; then
	df -h -P
	exit 0
fi

# Default to /, but let users override
[ -n "$MONITORED_DISK" ] || MP="/"
case $MP in
	/dev/*) MP=`grep "$MP" /proc/mounts | awk '{print $2}'` ;;
esac

df -h -P "$MP" | tail -n 1 | awk '{print $2 " " $5}' | sed "s/\([^0-9 ]\)/ \1/g" | awk '{printf "\005{=b MW}%d\005{-}\005{= MW}%sB,\005{-}\005{=b MW}%d\005{-}\005{= MW}%%\005{-} ", $1, $2, $3}'
