if [ "$1" = "--detail" ]; then
	cat /proc/cpuinfo
	exit 0
fi

speed=`egrep -i -m 1 "^cpu MHz|^clock|^bogomips" /proc/cpuinfo | awk -F"[:.]" '{ printf "%.1f", $2 / 1000 }'`

[ -n "$speed" ] && printf "\005{= cW}%sGHz\005{-} " $speed
