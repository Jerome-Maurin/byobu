# Default is "off"
p="wifi-quality"
grep -qs "^$p=1$" "$HOME/.screen-profiles/status" || exit 0

interface=`route -n | tail -n 1 | sed "s/^.* //"`
iwconfig "$interface" 2>/dev/null | grep "Link Quality=" | sed "s/^.*Link Quality=//" | sed "s/ .*$//g" | awk '{printf "\005{=b Ck}%.0f\005{-}\005{= Ck}%%)))\005{-} ", $1}' || exit 0
