PKG="byobu"

if [ "$1" = "--detail" ]; then
	hostname -f
	exit 0
fi

[ -r "/etc/$PKG/statusrc" ] && . "/etc/$PKG/statusrc"
. "$HOME/.$PKG/status"
[ "$whoami" = "1" ] && at="@"

printf "\005{+b }%s%s\005{-}" "$at" $(hostname -s 2>/dev/null || hostname)
