# Make sure that we're not already in a screen session
[ -z "$STY" ] || exit 0
case "$TERM" in
	*screen*) exit 0 ;;
esac

out=`screen -ls 2>/dev/null` || true
if echo "$out" | grep -qsi "^No Sockets found in "; then
	# Start new byobu session
	exec byobu
else
	# Re-attach to an existing session
	exec screen -xRR
fi
